# Server Configuration
PORT=3000
NODE_ENV=development

# Database
DATABASE_PATH=./data/runtime.db

# Authentication (Required for auth features)
JWT_ACCESS_SECRET=generate-a-secure-random-string-min-32-chars
JWT_REFRESH_SECRET=generate-another-secure-random-string-min-32-chars
BCRYPT_ROUNDS=12

# Optional: Session Configuration
SESSION_DOMAIN=localhost
SESSION_SECURE=false

# Optional: Feature Flags
ENABLE_AUTH=true
REQUIRE_AUTH=false
